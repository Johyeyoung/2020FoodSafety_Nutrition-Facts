<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="408dp"
                android:layout_height="327dp"
                app:srcCompat="@drawable/bback"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:background="#7e84a3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="16dp"
                android:textColor="#7e7e7e"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="STARBUCKS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="14dp"
                android:lineSpacingExtra="5sp"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="아이스 블론드 애플 쿠키 라떼" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="3dp"
                android:lineSpacingExtra="9sp"
                android:textColor="#9c7e84a3"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Iced Blonde Apple Cookie Latte" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="16dp"
                android:background="#7e84a3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="11dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="470dp"
                tools:text="상품상세정보" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#7e7e7e"
                android:textSize="17sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="530dp"
                tools:text="제철 사과와 커피의 달콤 쌉싸름한 만남.
국내산 청송 사과 쿠키가 토핑이 된
매력적인 맛의 카페 라떼를 블론드 원두
로 즐겨보세요." />

            <!-- 성분표시 부분 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="41dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:lineSpacingExtra="11sp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Nutrition Facts" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="59dp"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#c2e82f2f"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="총 내용량  427ml" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="51dp"
                    android:background="#7e84a3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="6sp"
                    android:textColor="#7e84a3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="총 내용량 당" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="308dp"
                    android:layout_marginLeft="308dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="end"
                    android:lineSpacingExtra="3sp"
                    android:textColor="#7e84a3"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="1일 영양성분\n 기준치에 대한 비율" />

            </RelativeLayout>




        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>